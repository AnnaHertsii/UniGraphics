<Window
    x:Class="UniGraphics.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniGraphics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UniGraphics"
    Width="900"
    Height="640"
    MinWidth="700"
    MinHeight="600"
    Left="20"
    Top="20"
    Icon="/UniGraphics;component/Resources/Unicorn/logo.png"
    SizeChanged="WindowSizeChanged"
    mc:Ignorable="d">
    <Grid Name="mainGrid">
        <Frame
            IsTabStop="False"
            Name="MainFrame"
            DataContextChanged="MainFrame_DataContextChanged"
            LoadCompleted="MainFrame_LoadCompleted"
            NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" />
    </Grid>
</Window>
