<Page
    x:Class="UniGraphics.ColorModels.ColorModelsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvrt="clr-namespace:UniGraphics.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniGraphics.ColorModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ColorModelsView"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="396" />
            <RowDefinition MinHeight="120" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" />
            <ColumnDefinition />
            <ColumnDefinition Width="3"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu
            Grid.ColumnSpan="4"
            Background="#99A2F1"
            Foreground="White">
            <MenuItem
                FontSize="16"
                Foreground="White"
                Header="Файл">
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Зберегти як..." />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Вийти" />
            </MenuItem>
            <MenuItem
                FontSize="16"
                Foreground="White"
                Header="Довідка">
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Довідка" />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Навчальні матеріали" />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Кредити" />
            </MenuItem>
        </Menu>
        <TextBlock Text="RGB" Foreground="White" FontSize="16" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="HSL" Foreground="White" FontSize="16" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="#BCC3FF">
            <Grid>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="49"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Колірні моделі"
                    FontSize="25"
                    Foreground="White" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="191"
                    Height="36"
                    Margin="10,49,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Оберіть тон:"
                    FontSize="18"
                    Foreground="White" />
                <Slider x:Name="lightnessSlider" Margin="31,167,39,380"/>
                <Label Content="RGB:" Margin="39,218,180,329"/>
                <Label Content="HSL:" Margin="39,250,180,289"/>
                <Label Name="rgbLabel" Content="(255, 255, 255)" Margin="89,218,67,329"/>
                <Label Name="hslLabel" Content="(120, 100%, 100%)" Margin="89,250,67,297"/>
                <Border Name="selectedHue" BorderThickness="2" BorderBrush="#99A2F1" Height="27" Margin="219,105,23,443" Width="27"/>
            </Grid>
        </Border>
        <Border Background="#BCC3FF" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"></Border>
        <Image
            Name="colorModelsImageLeft"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            RenderOptions.BitmapScalingMode="NearestNeighbor"
            Source="{Binding Path=Image}" />
        <Image
            Name="colorModelsImageRight"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3"
            RenderOptions.BitmapScalingMode="NearestNeighbor"
            Source="{Binding Path=Image}" />
        <Image
            Grid.Row="2"
            Width="118"
            Height="114"
            Margin="0,0,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Source="/UniGraphics;component/Resources/Unicorn/UnicornHat.png" />
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Width="150"
            Height="86"
            Margin="10,0,0,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="White"
            CornerRadius="15">
            <TextBlock
                Padding="5"
                Text=""
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Border>
    </Grid>
</Page>
