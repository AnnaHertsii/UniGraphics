<Page
    x:Class="UniGraphics.Fractals.FractalsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniGraphics.Fractals"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FractalsView"
    d:DesignHeight="500"
    d:DesignWidth="500"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            Margin="-33,-175,33,175"
            Foreground="Red"
            Text="Hello, world! Make fractals in this page, please!" />
        <Canvas
            Name="fractalCnv"
            Width="410"
            Height="410">
            <Image
                Name="fractalImg"
                Width="400"
                Height="400"
                RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </Canvas>
        <Button
            Name="createFractalBtn"
            Width="94"
            Height="45"
            Margin="0,0,102,-73"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="generateFractal"
            Content="Create fractal" />
    </Grid>
</Page>
