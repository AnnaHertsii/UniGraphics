<Page
    x:Class="UniGraphics.Fractals.FractalsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UniGraphics.Fractals"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FractalsView"
    d:DesignHeight="500"
    d:DesignWidth="500"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Canvas
            Name="fractalCnv"
            Width="410"
            Height="410"
            Margin="79,23,11,67">
            <Image
                Name="fractalImg"
                Width="400"
                Height="400"
                RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </Canvas>
        <Button
            Name="createFractalBtn"
            Width="100"
            Height="45"
            Margin="16,0,384,10"
            VerticalAlignment="Bottom"
            Click="generateFractal"
            Content="Create fractal" />
        <Button Content="Save as a picture" HorizontalAlignment="Left" Height="45" Margin="127,445,0,0" VerticalAlignment="Top" Width="121" Click="SavePicture"/>
    </Grid>
</Page>
