<Page x:Class="UniGraphics.Transformation.TransformationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniGraphics.Transformation"
      mc:Ignorable="d" 
      Title="TransformationView"
      d:DesignHeight="600"
      d:DesignWidth="900"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="338" />
            <RowDefinition MinHeight="120" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" />
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu
            Grid.ColumnSpan="4"
            Background="#99A2F1"
            Foreground="White">
            <MenuItem
                FontSize="16"
                Foreground="White"
                Header="Файл">
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Command="{Binding OpenFile}"
                    Header="Відкрити" />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Command="{Binding SaveFile}"
                    Header="Зберегти як..." />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Command="{Binding Exit}"
                    Header="Вийти" />
            </MenuItem>
            <MenuItem
                FontSize="16"
                Foreground="White"
                Header="Довідка">
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Довідка" />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Навчальні матеріали" />
                <MenuItem
                    Padding="-20,0,0,0"
                    Background="#F2F2F2"
                    Foreground="#99A2F1"
                    Header="Про програму"/>
            </MenuItem>
        </Menu>
        <TextBlock Text="RGB" Foreground="White" FontSize="16" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="21" Margin="143,2" Width="28"></TextBlock>
        <TextBlock Text="HSL" Foreground="White" FontSize="16" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="21" Margin="144,2" Width="26"></TextBlock>
        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="#BCC3FF">
            <Grid>
                <Button
                    Name="BackButton" 
                    Height="29"
                    Margin="10,19,229,0"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Background="#99A2F1"
                    Grid.Column="0" >
                    <Image HorizontalAlignment="Left" Source="/UniGraphics;component/Resources/back.png" Stretch="Uniform" Height="28" Width="25"/>
                </Button>
                <Label
                    Grid.Column="0"
                    Height="38"
                    Margin="51,16,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Афінні перетворення"
                    FontSize="20"
                    Foreground="White" Width="208" />
                <Label
                    Grid.Column="0"
                    Width="191"
                    Height="36"
                    Margin="39,59,39,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Координати вершини:"
                    FontSize="18"
                    Foreground="White" />

                <Label
                    Grid.Column="0"
                    Width="151"
                    Height="36"
                    Margin="10,141,108,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    Content="Довжина сторони:"
                    FontSize="16"
                    Foreground="White" />

                <Label
                    Grid.Column="0"
                    Width="30"
                    Height="31"
                    Margin="138,91,101,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Y:"
                    FontSize="18"
                    Foreground="White" />
                <Label
                    Grid.Column="0"
                    Width="30"
                    Height="31"
                    Margin="9,91,230,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="X:"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    Name="ConstantRealText"
                    Grid.Column="0"
                    Width="73"
                    Height="27"
                    Margin="39,95,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    FontSize="14"
                    Foreground="#8787ed"
                    SpellCheck.IsEnabled="True"
                    TextWrapping="Wrap" />
                <Button
                    Name="StartButton"
                    Height="40"
                    Margin="10,288,136,0"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Background="#99A2F1"
                    Grid.Column="0" >
                    <StackPanel Orientation="Horizontal">
                        <Image HorizontalAlignment="Left" Source="/UniGraphics;component/Resources/start.png" Stretch="Uniform" Height="28" Width="26"></Image>
                        <TextBlock  
                            FontSize="16"
                            Text="Почати"
                            Foreground="White" Width="58" Height="22"
                            ></TextBlock>
                    </StackPanel>
                </Button>
                <Button
                    Name="StopButton"
                    Height="40"
                    Margin="138,288,10,0"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    Background="#99A2F1"
                    Grid.Column="0" >
                    <StackPanel Orientation="Horizontal">
                        <Image HorizontalAlignment="Left" Source="/UniGraphics;component/Resources/stop.png" Stretch="Uniform" Height="25" Width="32"></Image>
                        <TextBlock  
                            FontSize="16"
                            Text="Зупинити"
                            Foreground="White" Width="71" Height="24"
                            ></TextBlock>
                    </StackPanel>
                </Button>
                <TextBox
                    x:Name="ConstantRealText_Copy"
                    Grid.Column="0"
                    Width="73"
                    Height="27"
                    Margin="173,95,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    FontSize="14"
                    Foreground="#8787ed"
                    SpellCheck.IsEnabled="True"
                    TextWrapping="Wrap" />
                <Label
                    Grid.Column="0"
                    Width="112"
                    Height="36"
                    Margin="10,177,147,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    Content="Кут повороту:"
                    FontSize="16"
                    Foreground="White" />
                <Label
                    Grid.Column="0"
                    Width="134"
                    Height="36"
                    Margin="10,213,125,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    Content="Точка повороту:"
                    FontSize="16"
                    Foreground="White" />
                <RadioButton
                    Name="CenterTransformRadio"
                    Grid.Column="0"
                    Width="12"
                    Height="12"
                    Margin="149,224,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    IsChecked="True" />
                <RadioButton
                    Name="VertexTransformRadio"
                    Grid.Column="0"
                    Width="12"
                    Height="12"
                    Margin="149,248,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"/>
                <Label
                    Grid.Column="0"
                    Width="57"
                    Height="30"
                    Margin="172,213,40,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    Content="Центр"
                    FontSize="16"
                    Foreground="White" />
                <Label
                    Grid.Column="0"
                    Width="77"
                    Height="30"
                    Margin="172,238,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    Content="Вершина"
                    FontSize="16"
                    Foreground="White" />
            </Grid>
        </Border>
        <Border Background="#BCC3FF" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="315,0,0,0"></Border>
        <Grid
            ClipToBounds="True"
            Grid.Row="1"
            Grid.RowSpan="2">
           
            <TextBlock
                HorizontalAlignment="Left" 
                Margin="-257,482,0,0" 
                VerticalAlignment="Top" Width="147" Height="78"/>

        </Grid>
        <Grid
            ClipToBounds="True"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2" Margin="96,0,0,0"/>
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Width="150"
            Height="86"
            Margin="10,0,0,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="White"
            CornerRadius="15">
            <TextBlock
                Padding="5"
                Foreground="#4278cf"
                FontSize="10"
                Text="Щоб почати роботу з рухом шестикутника, введіть необхідні параметри зверху :)"
                TextAlignment="Center"
                TextWrapping="Wrap" Margin="0,17,0,19" />
            
        </Border>
        <Image
            Grid.Row="2"
            Width="118"
            Height="114"
            Margin="0,0,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Source="/UniGraphics;component/Resources/Unicorn/UnicornHat.png" />
        <ListBox 
            HorizontalAlignment="Left" 
            Height="29" 
            Margin="168,145,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Width="91"/>
        <ListBox 
            HorizontalAlignment="Left" 
            Height="30" 
            Margin="168,179,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Width="91"/>
    </Grid>
</Page>
